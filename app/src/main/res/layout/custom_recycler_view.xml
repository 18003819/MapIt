<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@color/colorPrimaryDark">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="10sp"
        app:cardCornerRadius="20sp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


                <TextView
                    android:id="@+id/startLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:paddingLeft="10sp"
                    android:paddingRight="10sp" />

                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:src="@drawable/arrow"
                    android:rotation="90"
                    android:padding="3sp"></ImageView>

                <TextView
                    android:id="@+id/endLocation"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10sp"
                    android:paddingRight="10sp"
                    android:layout_weight="1" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20sp"></Space>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5sp">

                <TextView
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Duration: "
                    android:layout_gravity="end"
                    android:textAlignment="textEnd"
                    android:textSize="30sp"
                    android:textColor="#6685D1"></TextView>
                <TextView
                    android:id="@+id/duration_Recycler_Txt"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_weight="1"></TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5sp">

                <TextView
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Distance: "
                    android:textSize="30sp"
                    android:layout_gravity="end"
                    android:textColor="#6685D1"
                    android:textAlignment="textEnd"></TextView>
                <TextView
                    android:id="@+id/distance_Recycler_Txt"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"></TextView>

            </LinearLayout>


        </LinearLayout>



    </androidx.cardview.widget.CardView>
</RelativeLayout>